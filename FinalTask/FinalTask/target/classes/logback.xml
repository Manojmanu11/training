<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>C:/Users/manoj.katam/Downloads/FinalTask/FinalTask/logs.log</file>
        <append>true</append>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{15} - %msg%n</pattern>
